<!-- /pages/me/me.wxml -->
<view class="view">
  	<image class="headimage" src="../../images/head.jpg" bindtap="login"></image>
	<text class="headtext" bindtap="login">{{username}}</text>
</view> 
<view class="usercneter" bindtap="openPage('../project/project')">
	<view class="text_f_w_16">最新项目</view>
	<image class="right" src="../../images/right.png"></image>
</view>
<view class="usercneter" bindtap="openPage('../mycollect/mycollect')">
	<view class="text_f_w_16">我的收藏</view>
	<image class="right" src="../../images/right.png"></image>
</view>
<view class="usercneter" bindtap="addtodo">
	<view class="text_f_w_16">添加待办</view>
	<image class="right" src="../../images/right.png"></image>
</view>
<view class="usercneter" bindtap="done">
	<view class="text_f_w_16">完成清单</view>
	<image class="right" src="../../images/right.png"></image>
</view>
<view class="usercneter" bindtap="about">
	<view class="text_f_w_16">关于我们</view>
	<image class="right" src="../../images/right.png"></image>
</view>
<view wx:if="{{username != '未登录'}}" class="usercneter" bindtap="loginout">
	<view class="text_f_w_16">退出登录</view>
	<image class="right" src="../../images/right.png"></image>
</view>


